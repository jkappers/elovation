<tr>
	<td><%= rating_counter + 1 %></td>
	<td>
  	<% if rating.team.players.count == 1 %>
    	<%= image_tag(gravatar_url(rating.team.players.first, :size => 40)) %>
    <% end %>
    <%= link_to rating.team.name, team_game_path(rating.team, @game) %>
	</td>
	<td><%= rating.team.results.count %></td>
	<td><%= rating.value %></td>
	
</tr>
