<header class="pure-g">
  <div class="pure-u-1">
    <h1><%= @game.name %></h1>
    <%= link_to "Record a Game", new_game_result_path(@game), :class => "pure-button pure-button-primary" %>
  </div>
</header>

    </div><!-- close .pure-g-r -->
</div><!-- close .pure-u-1 -->

<div class="pure-g">
  <div class="pure-u-1">
    <% if @recent_results.any? %>
      <%= render :partial => 'shared/most_recent', :object => @recent_results.shift %>
    <% end %>
  </div>
</div>

<div class="pure-g-r">
  <div class="pure-u-5-6 container">

    <div class="pure-g" id="ranking">
      <div class="pure-u-1-2">
      <% if @player_ratings.any? %>
      <h2>Top Players</h2>
        <ol class="player-rank">
         <%= render :partial => 'rating', :collection => @player_ratings.limit(5) %>
        </ol>
      <% else %>
        <p>
          There are no ranked players.
        </p>
      <% end %>
      </div>
      <div class="pure-u-1-2">
        <% if @team_ratings.any? %>
        <h2>Top Teams</h2>
        <ol class="team-rank">
         <%= render :partial => 'rating', :collection => @team_ratings.limit(5) %>
        </ol>
      <% else %>
        <p>
          There are no ranked players.
        </p>
      <% end %>
      </div>
    </div>
    
    <div class="pure-g" id="match-feed">
      <div class="pure-u-1">
        <h2>Match Feed</h2>
          <% if @recent_results.any? %>
            <%= render :partial => 'shared/game_feed', :object => @recent_results %>
          <% else %>
            <p>No matches have been recorded.</p>
          <% end %>
      </div>
    </div>
