<div class="most-recent pure-g">
	<div class="game pure-u-1">
		<% most_recent.teams.each_with_index do |team, index| %>
			<div class="team<% if team.players.count == 2 %> doubles<% end %> pure-u-1-2">
				<% team.players.each do |player| %>
					<% rating = @all_ratings.detect { |r| r.player_id == player.id } %>
  				<% rank = @all_ratings.index(rating) %>
		  			<div class="player">
			    		<span class="rank"><%= rank + 1 %></span>
			    		<span class="value"><%= rating.value %></span>
			  			<span class="name"><%= rating.player.name %></span>
			  			<%= link_to image_tag(gravatar_url(rating.player, :size => 250)), player_game_path(rating.player, @game) %>
		  			</div>
				<% end %>
	  		</div>
		  	<% if index == 0 %>
	  		<div class="versus">
	  			<div class="versus-text">versus</div>
	  		</div>
		  	<% end %>
		<% end %>
	</div>
</div>