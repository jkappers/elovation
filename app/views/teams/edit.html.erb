<div class="hero-unit">
  <%= form_for @team, html: { class: 'form-horizontal' }  do |f| %>
    <div class="form-group">
      <div class="col-md-12">
        <%= f.label 'Name', for: 'team_name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <p>
      <%= f.submit :class => "btn btn-primary" %>
    </p>
  <% end %>
</div>