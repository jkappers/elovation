<div class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Leaders", root_path, class: "navbar-brand" %>
    </div>
    <div class="navbar-collapse collapse">
      <% if player_signed_in? %>
        <ul class="nav navbar-nav">
          <% if @game %>
            <li><%= link_to "Availability", game_availability_path(@game) %></li>
          <% end %>
          <% if current_player.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Games", games_path %></li>
              </ul>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_player.email %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Change password", edit_player_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", destroy_player_session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign in", new_player_session_path %></li>
          <li><%= link_to "Register", new_player_registration_path %></li>
        </ul>
      <% end %>
    </div><!--/.nav-collapse -->
  </div>
</div>
